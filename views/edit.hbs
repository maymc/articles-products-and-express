 {{#with editProductItem}}
<form action="/products/{{id}}?_method=PUT" method="post">

  <label>Name:
    <textarea name="name" id="">{{name}}</textarea>
  </label>

  <label>Price:
    <textarea name="price" id="">{{price}}</textarea>
  </label>

  <label>Inventory:
    <textarea name="inventory" id="">{{inventory}}</textarea>
  </label>
  <br><br>
  <input type="submit" value="Submit"> {{/with}}
</form>

{{#with editProductItem}}
<form action="/products/{{id}}?_method=DELETE" method="post">
  <button type="submit">Delete Product</button>
  {{/with}}
</form>

